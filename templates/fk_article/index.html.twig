{% extends 'base.html.twig' %}

{% block title %}Show All{% endblock %}

{% block main %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
        <tr>
            <th scope="row">{{ article.id }}</th>
            <td>{{ article.nom | upper | trim}}</td>
            <td>{{ article.prix }}</td>
            <td>
                <a href="{{ path('article.details',{'id':article.id}) }}">
                    <button type="button" class="btn btn-dark">Details</button>
                </a>
                <a href="{{ path('article.edit',{'id':article.id}) }}">
                    <button type="button" class="btn btn-dark">Modifier</button>
                </a>
                <a href="{{ path('article.delete',{'id':article.id}) }}">
                    <button type="button" class="btn btn-dark">Delete</button>
                </a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
